<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_food_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.prateek.bimsapp.OrderFoodFinal"
    tools:showIn="@layout/activity_order_food_final">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/relativeLayout2">

        <ListView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderList">


        </ListView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout22"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="@color/black"
            android:layout_toStartOf="@+id/totalTv"
            android:textStyle="bold"
            android:layout_marginEnd="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Total"
            android:textColor="@color/black"
            android:id="@+id/totalTv"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="12dp"
        android:paddingLeft="15sp"
        android:layout_below="@id/relativeLayout22"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout33"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentStart="true">


<RelativeLayout

    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:id="@+id/imageView2" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginStart="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/nameTv"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/name" />

</RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_phone_black_24dp"
                android:id="@+id/imageView3" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number:"
                android:textSize="16sp"

                android:id="@+id/number"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_marginStart="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Number"
                android:gravity="center_vertical"
                android:id="@+id/numberTv"
                android:layout_marginStart="12dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/number" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/location"
                android:id="@+id/imageView4" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="16sp"

                android:id="@+id/address"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginStart="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/addressTv"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/address" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ppp"
                android:id="@+id/imageView5" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks: "
                android:textSize="16sp"

                android:id="@+id/remarks"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_marginStart="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/remarksTv"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/remarks" />

        </RelativeLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_above="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout222"
        android:background="@color/white"
        android:layout_margin="12dp"
        android:padding="9dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvSubtotal"
            android:tint="@color/colorPrimary"
            android:src="@drawable/money"/>

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_toStartOf="@+id/subtotalTv"
            android:layout_marginEnd="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculating"
            android:textSize="20dp"
            android:id="@+id/subtotalTv"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:id="@+id/textViewDeliverChargesCondition"
        android:layout_margin="5dp"
        android:textStyle="italic"
        android:layout_above="@+id/relativeLayout222"
        android:text="*delivery charges extra for more than minimum order"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_weight="0"
                android:onClick="cancel"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="CANCEL"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"/>

            <Button
                android:layout_weight="1"
                android:text="ORDER"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:id="@+id/finalOrderButton"
                android:onClick="order"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
